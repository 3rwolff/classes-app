<div class="container">
    <div class="row row_space_top">
        <div class="side">

            <div>
                <%= image_tag(@course.main_video_id, :alt => "Image of game") %>
            </div>

            <div class="info">
                <h1><%= @course.name %></h1> 
                <%= link_to 'Back', root_path %> |
                <%= link_to 'Edit', edit_course_path %>
                <p><%= @course.description %></p>
                
            </div>

        </div>

        <div class="module_list">

            <div>
                <% @modules.each do |mod| %>
                    <div class="side module">
                        <div>
                            <%= image_tag('no_photo', :alt => "Image of module") %>
                        </div>
                        <div class="info">
                            <h4><%= link_to mod.title, course_course_module_path(@course, mod) %></h4>
                            <p><%= mod.description %></p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>

    </div>
</div>

<div class="project">
    <%= link_to 'back', users_path %>
    <div>
        Name: <code><%= @user.name %></code>
    </div>
    <div>
        Email: <code><%= @user.email %></code>
    </div>
     <div>
        Role: <code><%=  @role.name %></code>
    </div>

    <table class="table table-striped table-bordered">

    <thead>
        <td>Project ID</td>
        <td>Course ID</td>
        <td>Course Name</td>
        <td>Seats</td>
    </thead>
    <br/>
    <div class="title">Projects</div>
    <% if @role.id == 2 %>
        <% @teacher_projects.each do |project| %>
            <tr>
                <td><%= project.project_id %></td>
                <td><%= Project.find(project.project_id).course_id %></td>
                <td><%= Course.find(Project.find(project.project_id).course_id).name %></td>
                <td><%= ProjectStudent.where(project_id: project.project_id).count %></td>
            </tr>
        <% end %>
    <% else %>
       <% @student_projects.each do |project| %>
            <tr>
                <td><%= project.project_id %></td>
                <td><%= Project.find(project.project_id).course_id %></td>
                <td><%= Course.find(Project.find(project.project_id).course_id).name %></td>
                <td><%= ProjectStudent.where(project_id: project.project_id).count %></td>
            </tr>
        <% end %>
    <% end %>
    </table>

</div>

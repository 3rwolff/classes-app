
<table class="table table-striped table-bordered">
    <thead><td colspan="3" align="center">Glossary</td></thead>
    <thead>
        <td>Title</td>
        <td>Definition</td>
        <td>Category</td>
    </thead>
    <% @items.each do |item|%>
    <tr>
        <% category = GlossaryCategory.find(item.glossary_category_id)%>
        <td><%= link_to item.title, edit_glossary_item_path(item) %></td>
        <td><%= item.definition %></td>
        <td style="background-color: #<%= category.color_code %>"><%= category.name %></td>
    </tr>
    <% end %>
</table>